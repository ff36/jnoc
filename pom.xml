        </repository>
        <!-- END | NETBEANS -->
        
        <!-- START | PRIMEFACES -->
        <repository>
            <id>prime-repo</id>
            <name>Prime Repo</name>
            <url>http://repository.primefaces.org</url>
        </repository>
        <!-- END| PRIMEFACES -->
        
        <!-- START | JUNIT -->
