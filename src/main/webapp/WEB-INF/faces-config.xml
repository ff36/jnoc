            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>access-request-account-page</from-outcome>
            <to-view-id>/p/request.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
