<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <facelet-taglib version="2.2"
                    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibrary_2_2.xsd">
    </facelet-taglib>
    
    <application>
        <!-- AWS credentials to grant the application access to resources-->
        <resource-bundle>
            <base-name>AwsApi</base-name>
            <var>awsApi</var>
        </resource-bundle>
        <!-- Application configuration file -->
        <resource-bundle>
            <base-name>Config</base-name>
            <var>config</var>
        </resource-bundle>
        <!-- The resource bundle that contacins all the application strings -->
        <resource-bundle>
            <base-name>WebBundle</base-name>
            <var>webBundle</var>
        </resource-bundle> 
        <!-- Supported Languages by the application -->
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
    </application>
    
    <!-- -application navigation outcomes -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>access-home-page</from-outcome>
            <to-view-id>/index.jsf</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>access-login-page</from-outcome>
            <to-view-id>/login.jsf</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.jsf</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>access-forgot-pwd-page</from-outcome>
            <to-view-id>/p/password.jsf</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>access-contact-page</from-outcome>
            <to-view-id>/p/contact.jsf</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>access-legal-page</from-outcome>
            <to-view-id>/p/legal.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/a/*</from-view-id>
        
        <!-- dashboard -->
        <navigation-case>
            <from-outcome>access-dashboard-page</from-outcome>
            <to-view-id>/a/dashboard.jsf</to-view-id>
            <redirect />
        </navigation-case>
        
        <!-- account -->
