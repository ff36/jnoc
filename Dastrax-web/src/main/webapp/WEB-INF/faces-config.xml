            <to-view-id>/a/account/settings.jsf</to-view-id>
            <redirect />
        </navigation-case>
        
        <!-- accounts -->
        <!-- list -->
        <navigation-case>
            <from-outcome>access-accounts-list-page</from-outcome>
            <to-view-id>/a/accounts/list.jsf</to-view-id>
            <redirect />
        </navigation-case>     
        <!-- new -->
        <navigation-case>
            <from-outcome>access-create-account-page</from-outcome>
